<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<h3 style="padding-bottom:10px; border-bottom:1px solid #515151;">Categories</h3>
			<ul class="nav nav-pills nav-stacked">
				<% @categories.each do |category| %>
					<li><a href=""><%= category.name %></a></li>
				<% end %>
			</ul>
		</div>
		<div class="col-lg-9">
			<%= form_for :search, url: {action: 'search'} do |f| %>
				<div class="row" style="margin:10px -15px;">
					<div class="col-lg-12">
						<%= f.text_field 'title_search', {class: 'form-control', placeholder: 'Course Search'} %>
					</div>
				</div>
				<div class="row" style="margin:10px -15px;">
					<div class="col-lg-4">
						<%= f.text_field 'search_course_date', {class: 'form-control', placeholder: 'Date e.g. 2017-01-01'} %>
					</div>
					<div class="col-lg-4">
						<%= f.text_field 'search_start_time', {class: 'form-control', placeholder: 'Start time e.g. 11:00:00'} %>
					</div>
					<div class="col-lg-4">
						<%= f.submit "Search Now", {class: 'btn btn-primary'} %>
					</div>
				</div>

			<% end %>
			<div id="course-container">
				<% @courses.each do |course| %>
					<div class="course-card">
						<!-- <div class="col-lg-12"> -->
						<p><%= course.course_id %></p>
						<h3><%= course.course_name %></h3>
						<p><%= course.course_description %></p>
						<div class="button-container">
							<%= link_to "View Details", 'details', :class => 'btn btn-primary btn-sm' %>
							<%= link_to "Book this class", 'book', :class => 'btn btn-success btn-sm' %>
						</div>
						<!-- </div> -->
					</div>
				<% end %>
			</div>	
		</div>
	</div>
</div>
