<div class="container">
	<div class="row">
		<div class="col-lg-6" style="margin:0 auto; float:none;">
			<div class="alert alert-warning">
				<strong>Note:</strong> Only instructor & administrator can create a new course
			</div>
			<%= form_for @course, url: courses_path, remote: true do |f| %>
				<div class="form-group">
					<%= f.label :course_id %>
					<%= f.text_field :course_id, {class:'form-control'} %>
				</div>
				<div class="form-group">
					<%= f.label :course_name %>
					<%= f.text_field :course_name, {class:'form-control'} %>
				</div>
				<div class="form-group">
					<%= f.label :course_description %>
					<%= f.text_area :course_description, {class:'form-control'} %>
				</div>
				<div class="form-group">
					<%= f.label :course_date %>
					<%= f.text_field :course_date, {class:'form-control', placeholder: 'yyyy-mm-dd (e.g. 2017-01-01)'} %>
				</div>
				<div class="form-group">
					<%= f.label :course_start_time %>
					<%= f.text_field :course_start_time, {class:'form-control', placeholder: 'hh:mm:ss (e.g. 12:00:00)'} %>
				</div>
				<div class="form-group">
					<%= f.label :course_end_time %>
					<%= f.text_field :course_end_time, {class:'form-control', placeholder: 'hh:mm:ss (e.g. 12:00:00)'} %>
				</div>
				<%= f.submit "Create new course", {class:'btn btn-primary btn-block'} %>
			<% end %>
		</div>
	</div>
</div>