<!DOCTYPE html>
<html>
  <head>
    <title>CourseManager</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="navbar navbar-inverse navbar-static-top" style="border-bottom:1px solid #dadada;">
  		<div class="container">
	  		<div class="navbar-header">
	  			<a href="" class="navbar-brand">COURSE MANAGEMENT</a>
	  		</div>
        <div class="navbar-collapse">
          <ul class="navbar-nav nav navbar-right">
            <li><a href="">Home</a></li>
            <% if can? :manage, Course %>
              <li><%= link_to "Manage", {controller: 'courses', action:'new'} %></li>
            <% end %>
            <% if is_login? %>
              <li><%= link_to "Logout", {controller: 'session', action:'logout'} %></li>
              <li><%= link_to "Edit Profile", {controller: 'session', action:'editprofile'} %></li>
            <% end %>
          </ul>
        </div>
	  	</div>
  	</div>
    <%= yield %>
  </body>
</html>
