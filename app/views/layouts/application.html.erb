<!DOCTYPE html>
<html>
  <head>
    <title>CourseManager</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="navbar navbar-inverse navbar-static-top" style="border-bottom:1px solid #dadada;">
  		<div class="container">
	  		<div class="navbar-header">
	  		 <%= link_to "COURSE MANAGER", root_url, {class: 'navbar-brand'} %>
	  		</div>
        <div class="navbar-collapse">
          <ul class="navbar-nav nav navbar-right">
            <li><%= link_to "Home", root_url %></li>
            <% if can? :manage, Course %>
              <li><%= link_to "Create New Course", {controller: 'courses', action:'new'} %></li>
            <% end %>
            <% if is_login? %>
              <li><%= link_to "Edit Profile", edit_user_path(:id => current_user.id) %></li>
              <li><%= link_to "Logout", {controller: 'session', action:'logout'} %></li>
            <% end %>
          </ul>
        </div>
	  	</div>
  	</div>
    <%= yield %>
  </body>
</html>
