<div class="container">
	<div class="row">
		<div class="col-lg-6" style="margin:0 auto; float:none;">
			<div class="alert alert-warning">
				<strong>Note:</strong> Only instructor & administrator can create a new course
			</div>
			<%= form_for @user, url: {action:'editprofile'}, method: :put, remote: true do |f| %>
				<div class="form-group">
					<%= f.label :firstname %>
					<%= f.text_field :firstname, {class:'form-control'} %>
				</div>
				<div class="form-group">
					<%= f.label :lastname %>
					<%= f.text_field :lastname, {class:'form-control'} %>
				</div>
				<div class="form-group">
					<%= f.label :nickname %>
					<%= f.text_field :nickname, {class:'form-control'} %>
				</div>
				<div class="form-group">
					<%= f.label :birthdate %>
					<%= f.text_field :birthdate, {class:'form-control'} %>
				</div>
				<div class="form-group">
					<%= f.label :gender %>
					<%= f.text_field :gender, {class:'form-control'} %>
				</div>
				<%= f.submit "Create new course", {class:'btn btn-primary btn-block'} %>
			<% end %>
		</div>
	</div>
</div>